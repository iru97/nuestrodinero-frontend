{
  "name": "nuestrodinero-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run serve:ssr",
    "build": "ng build",
    "test": "jest",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "codecov": "codecov",
    "dev:ssr": "ng run nuestrodinero-frontend:serve-ssr",
    "serve:ssr": "node dist/nuestrodinero-frontend/server/main.js",
    "build:ssr": "rimraf dist && ng build --prod && ng run nuestrodinero-frontend:server:production",
    "prerender": "rimraf dist && ng run nuestrodinero-frontend:prerender"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.0.2",
    "@angular/cdk": "^9.2.4",
    "@angular/common": "~9.0.2",
    "@angular/compiler": "~9.0.2",
    "@angular/core": "~9.0.2",
    "@angular/flex-layout": "^9.0.0-beta.31",
    "@angular/forms": "~9.0.2",
    "@angular/material": "^9.2.4",
    "@angular/platform-browser": "~9.0.2",
    "@angular/platform-browser-dynamic": "~9.0.2",
    "@angular/platform-server": "~9.0.2",
    "@angular/router": "~9.0.2",
    "@briebug/jest-schematic": "^2.1.1",
    "@nguniversal/express-engine": "^9.0.2",
    "@types/xml2js": "^0.4.5",
    "express": "^4.15.2",
    "rxjs": "~6.5.4",
    "stream": "0.0.2",
    "timers": "^0.1.1",
    "tslib": "^1.10.0",
    "xhr2": "^0.2.0",
    "xml2js": "^0.4.23",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.3",
    "@angular/cli": "~9.0.3",
    "@angular/compiler-cli": "~9.0.2",
    "@angular/fire": "^6.0.0",
    "@angular/language-service": "~9.0.2",
    "@ngneat/spectator": "^5.7.1",
    "@nguniversal/builders": "^9.0.2",
    "@types/express": "^4.17.0",
    "@types/jest": "25.2.1",
    "@types/node": "^12.11.1",
    "codecov": "^3.7.0",
    "codelyzer": "^5.1.2",
    "firebase": "^7.14.4",
    "jest": "^25.5.4",
    "jest-preset-angular": "8.1.3",
    "protractor": "~5.4.3",
    "rimraf": "^3.0.2",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "typescript": "~3.7.5"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "roots": [
      "src"
    ],
    "transform": {
      "^.+\\.(ts|js|html)$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-jest.ts"
    ],
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/src/app/$1",
      "@assets/(.*)": "<rootDir>/src/assets/$1",
      "@core/(.*)": "<rootDir>/src/app/core/$1",
      "@env": "<rootDir>/src/environments/environment",
      "@src/(.*)": "<rootDir>/src/src/$1",
      "@state/(.*)": "<rootDir>/src/app/state/$1"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "jest-preset-angular/build/InlineFilesTransformer",
          "jest-preset-angular/build/StripStylesTransformer"
        ]
      }
    }
  }
}
